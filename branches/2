use std::io::{self, Write};

use colored::Colorize;

fn main() {
    println!("{}", "  ".on_red());
    let mut y = 1;
    while y < 11 {
        let mut x = 1;
        while x < 9 {
            let result = x * y;
            let result = match x {
                1 => "  ".on_red(),

            };
            print!("{}", result.);
            io::stdout().flush().unwrap();
            x += 1;
        }
        y += 1;
        println!(" ");
    }
}
